<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.dartmouth.kd.devents.SettingsFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1"
        android:contentDescription="@string/devent_logo"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:src="@mipmap/devents" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="User Profile"
        android:textColor = "@color/Dartmouth"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="casual"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Do you want to see DEvent suggestions tailored especially to you? Create a user profile so that event creaters
         and the DEvents team can keep you in the know about events you might be interested in. Click below to begin!"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="casual"/>

    <Button
        android:id="@+id/startProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Launch User Profile"
        android:fontFamily="casual"/>


</LinearLayout>
